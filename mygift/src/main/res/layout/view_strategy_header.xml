<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="专题"/>
    <TextView
        android:id="@+id/strategy_header_lookall_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:text="查看全部"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/strategy_header_recyleview"
        android:layout_below="@+id/strategy_header_lookall_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <View
        android:layout_below="@+id/strategy_header_recyleview"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayView"/>

</RelativeLayout>